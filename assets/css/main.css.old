body {
  background: rgb(20, 20, 20);
  color: rgb(255, 255, 255);
  font-family: "Myriad Pro", sans-serif;
  font-weight: 400;
  padding-top: 3%;
}

h1 {
  font-size: 2em;
  font-weight: 800;
  margin: 20px 0px;
}

h2 {
  font-size: 1.1em;
  font-weight: 400;
}

p {
  font-size: 0.9em;
  line-height: 2.5em;
  margin: 25px 0px;
  max-width: 340px;
}

section > p:first-of-type {
  margin-top: 70px;
}

button {
  font-size: 0.9em;
  background: none;
  border: none;
  border-bottom: 2px solid #FFF;
  color: #FFF;
  padding: 0px 0px 3px 0px;
  font-weight: 600;
  margin-top: 20px;
}

#logo {
  width: 20%;
  margin: 10% 0% 12% 0%;
}

.navigation {
  display: block;
  width: 100%;
  padding: 25px 0px;
  text-align: center;

  text-decoration: none;
  letter-spacing: 2px;
  text-transform: uppercase;
  font-size: 0.9em;
  font-weight: 800;
  color: #FFF;
  text-shadow: 2px 1px #000;

  transition: all 0.5s ease;
  position: relative;

  min-width: 300px;
}

.navigation:hover {
  padding: 100px 0px;
}

#research-link::after,
#ux-link::after,
#design-link::after,
#development-link::after,
#code-link::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.2;

  transition: all 0.5s ease;
}

#research-link:hover::after,
#ux-link:hover::after,
#design-link:hover::after,
#development-link:hover::after,
#code-link:hover::after {
  opacity: 0.8;
}

#research-link::after {
  background: url('../images/research/empathy_map.jpg') no-repeat center center;
  background-size: cover;
}

#ux-link::after {
  background: url('../images/ux/sketches.jpg') no-repeat center center;
  background-size: cover;
}

#design-link::after {
  background: url('../images/design/open_bmc_design.png') no-repeat center center;
  background-size: cover;
}

#development-link::after {
  background: url('../images/development/monocle_dashboard.png') no-repeat center center;
  background-size: cover;
}

#code-link::after {
  background: url('../images/research/empathy_map.jpg') no-repeat center center;
  background-size: cover;
}

#main-nav {
  margin-top: 45%;
  padding-top: calc(50% + 100px);
  height: 100%;
  position: relative;
}

.nav-links {
  position: absolute;
  bottom: 0;
  width: 100%;
}

